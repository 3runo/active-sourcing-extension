{
  "manifest_version": 2,

  "name": "Active Sourcing",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",

  "permissions": ["storage", "webNavigation", "activeTab", "<all_urls>"],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/16px.png",
      "24": "img/24px.png",
      "32": "img/32px.png",
      "48": "img/48px.png"
    }
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "img/16px.png",
    "24": "img/24px.png",
    "32": "img/32px.png",
    "48": "img/48px.png",
    "64": "img/64px.png",
    "128": "img/128px.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_end"
    }
  ]
}
