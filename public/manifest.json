{
  "manifest_version": 2,

  "name": "Active Sourcing",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icons/16px.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/16px.png",
    "24": "icons/24px.png",
    "32": "icons/32px.png",
    "48": "icons/48px.png",
    "64": "icons/64px.png",
    "128": "icons/128px.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": ["storage", "webNavigation", "activeTab", "<all_urls>"]
}
